<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="4dp"
    android:background="#79BAD9"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageViewLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:src="@drawable/adduser"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/userNameETId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:hint="User Full Name"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/emailETId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:textAlignment="center"
        android:hint="Email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/passwordeETId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:hint="Password"
        android:inputType="text"/>



    <Button
        android:id="@+id/loginBtId"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:background="@drawable/loginbutton"
        android:layout_gravity="center"
        android:shadowColor="#A8A8A8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bycreating"
        android:textAlignment="center"
        android:textSize="12sp"
        />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alreadyAccount"

        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singUp"
        android:onClick="singup"

        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        />

</LinearLayout>







</LinearLayout>